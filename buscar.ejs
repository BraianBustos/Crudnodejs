<h1>Buscar Producto</h1>
<form action="/buscar" method="get">
    <div class="form-horizontal">
        <div class="form-group row">
            <tbody>
                <% for (const producto of modelo){ %>
                <label class="col-form-label col-sm-2" for= "Nombre">Nombre</label>
                <div class="col sm-8">
                    <input autofocus class="form-control" name="Nombre" value="<%= modelo.Nombre%>" />
                </div>
                <% } %>
            </tbody>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="buscar" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
</form>