<%- include('header') -%>
<title>CRUD SQLite y Node</title>
<h1>Productos(<%= modelo.length%>)</h1>
<div class="table-responsive-sm" style="width:750px">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripcion</th>
                <th class="d-print-none"><a class="boton btn btn-sm btn-success" href="http://localhost:5000/crear"><img src="web/img/editar.png"></a></th>
            </tr>
        </thead>
        <tbody>
            <% for (const producto of modelo){ %>
            <tr>
                <td><%= producto.Nombre%></td>
                <td><%= producto.Precio%></td>
                <td><%= producto.Descripcion%></td>
                <td class="fijo"><a class="btn btn-sm btn-warning" href="http://localhost:5000/editar/<%=producto.Produc_ID %>">Editar</a></td>
                <td class="fijo"><a class="btn btn-sm btn-danger" href="http://localhost:5000/eliminar/<%=producto.Produc_ID %>">Eliminar</a></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
<%- include('footer') -%>


